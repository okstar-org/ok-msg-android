<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:gravity="start|center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/workbench_panel_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_workbench_pld"/>

        <TextView
            android:id="@+id/workbench_panel_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/workbench_panel_image"
            app:layout_constraintLeft_toLeftOf="@id/workbench_panel_image"
            app:layout_constraintRight_toRightOf="@id/workbench_panel_image"
            tools:text="应用名称"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>