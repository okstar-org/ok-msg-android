<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <bitmap android:src="@drawable/icon_switch_open"
            android:width="30dp"
            android:height="30dp"/>
    </item>
    <item android:state_checked="false">
        <bitmap android:src="@drawable/icon_switch_close"
            android:width="30dp"
            android:height="30dp"/>
    </item>

</selector>